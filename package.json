{
  "name": "node-blog",
  "version": "3.0.0",
  "description": "a blog builded with Node.js,lowdb etc.",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/feimeizhan/node-blog"
  },
  "scripts": {
    "start": "node ./bin/www",
    "test": "npx mocha --exit --ui bdd tests --recursive",
