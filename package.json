    "lodash-id": "^0.14.0",
    "lowdb": "^1.0.0",
    "morgan": "^1.9.1",
    "nodemailer": "^6.7.1",
    "pug": "^3.0.2",
    "serve-favicon": "^2.5.0",
    "session-file-store": "^1.2.0"
  },
  "devDependencies": {
    "expect.js": "^0.3.1",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "standard": "^16.0.4",
    "superagent": "^3.8.3"
